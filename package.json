{
	"name": "intelliskript",
	"description": "IntelliSense for skript",
	"author": "John Heikens",
	"license": "GNU",
	"version": "1.6.3",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JohnHeikens/IntelliSkript"
	},
	"publisher": "JohnHeikens",
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"skript",
		"intelliskript",
		"intellisense"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:skript",
		"onLanguage:Sk-VSC",
		"onLanguage:sk",
		"onLanguage:skriptlang"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "skript",
				"extensions": [
					".sk"
				],
				"aliases": [
					"Skript",
					"sk"
				],
				"filenames": [],
				"firstLine": "#sk",
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./skript icon.png",
					"dark": "./skript icon.png"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "IntelliSkript",
			"properties": {
				"IntelliSkript.ErrorExempts": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "A RegExp which allows you to filter out annoying errors"
				},
				"IntelliSkript.UseColorTheme": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Disable this and reload VS code if you have a skript color theme plugin installed"
				},
				"intelliSkript.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"vscode-uri": "^3.0.7"
	}
}
