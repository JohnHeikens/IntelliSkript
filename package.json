{
	"name": "intelliskript",
	"displayName": "IntelliSkript",
	"description": "IntelliSense for skript",
	"author": "John Heikens",
	"license": "GNU",
	"version": "1.7.10",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JohnHeikens/IntelliSkript"
	},
	"publisher": "JohnHeikens",
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters"
	],
	"keywords": [
		"skript",
		"intelliskript",
		"intellisense",
		"format",
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:Sk-VSC",
		"onLanguage:sk",
		"onLanguage:skriptlang"
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"browser": "./client/dist/browserClientMain",
	"contributes": {
		"languages": [
			{
				"id": "skript",
				"extensions": [
					".sk"
				],
				"aliases": [
					"Skript",
					"sk",
					"Sk-VSC",
					"skriptlang"
				],
				"filenames": [],
				"firstLine": "^#\\s*Skript",
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./skript icon.png",
					"dark": "./skript icon.png"
				}
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "IntelliSkript",
				"id": "IntelliSkript",
				"properties": {
					"IntelliSkript.ErrorExempts": {
						"scope": "resource",
						"type": "string",
						"default": "",
						"description": "A RegExp which allows you to filter out annoying errors"
					},
					"IntelliSkript.UseColorTheme": {
						"scope": "resource",
						"type": "boolean",
						"default": true,
						"description": "Disable this and reload VS code if you have a skript color theme plugin installed"
					},
					"intelliSkript.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"chrome": "npm run compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./test-data"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"@vscode/test-web": "^0.0.51",
		"copy-webpack-plugin": "^12.0.2",
		"eslint": "^8.56.0",
		"path-browserify": "^1.0.1",
		"raw-loader": "^4.0.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"ts-webpack": "^1.0.0",
		"typescript": "^5.5.4",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"buffer": "^6.0.3",
		"vscode-uri": "^3.0.8"
	}
}
