{
	"name": "intelliskript",
	"displayName": "IntelliSkript",
	"description": "IntelliSense for skript",
	"author": "John Heikens",
	"license": "GNU",
	"version": "1.7.15",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JohnHeikens/IntelliSkript"
	},
	"publisher": "JohnHeikens",
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters"
	],
	"keywords": [
		"skript",
		"intelliskript",
		"intellisense",
		"format"
	],
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:Sk-VSC",
		"onLanguage:sk",
		"onLanguage:skriptlang"
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "skript",
				"extensions": [
					".sk"
				],
				"aliases": [
					"Skript",
					"sk",
					"Sk-VSC",
					"skriptlang"
				],
				"filenames": [],
				"firstLine": "^#\\s*Skript",
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./skript icon.png",
					"dark": "./skript icon.png"
				}
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "IntelliSkript",
				"id": "IntelliSkript",
				"properties": {
					"IntelliSkript.ErrorExempts": {
						"scope": "resource",
						"type": "string",
						"default": "",
						"description": "A RegExp which allows you to filter out annoying errors"
					},
					"IntelliSkript.UseColorTheme": {
						"scope": "resource",
						"type": "boolean",
						"default": true,
						"description": "Disable this and reload VS code if you have a skript color theme plugin installed"
					},
					"intelliSkript.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"watch": "tsc -b -w",
		"lint": "npm run lint:client && npm run lint:server",
		"lint:client": "eslint --config ./client/.eslintrc.json ./client/src/*.ts",
		"lint:server": "eslint --config ./server/.eslintrc.json ./server/src/*.ts",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^18.11.9",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"merge-options": "^3.0.4",
		"rimraf": "^5.0.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"vscode-uri": "^3.0.8"
	}
}
